package io.github.aasaru.drools.section07

import io.github.aasaru.drools.domain.InvalidPassport;
import io.github.aasaru.drools.domain.InvalidVisaApplication;
import io.github.aasaru.drools.domain.Passport;
import io.github.aasaru.drools.domain.Visa;
import io.github.aasaru.drools.domain.VisaApplication;

rule "Issue visa for valid applications"
	dialect "mvel"
	when
	  $visaApplication: VisaApplication( )// looking for VisaApplication
	  $passport: Passport( this.passportNumber == $visaApplication.passportNumber )//and  looking for matching passport
	  not InvalidPassport( this.passport == $passport )// checking when we are finding InvalidPassport fact
	  not InvalidVisaApplication( this.visaApplication == $visaApplication )// checking when we are finding InvalidVisaApplication fact
	then
	  Visa visa = new Visa( $passport.getPassportNumber() );
	  System.out.println("Issue " + visa);
	  insertLogical( visa )
end