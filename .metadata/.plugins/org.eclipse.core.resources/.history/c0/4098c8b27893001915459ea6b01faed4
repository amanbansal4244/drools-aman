package com.fil.contribution.implementationLayer.formats;

import java.io.File;
import java.io.IOException;

import com.fil.contribution.exception.NotSupportedFileFormatException;
import com.fil.contribution.model.FileValidationModel;

/**
 *
 * @description : This is an implementation layer.So that we can decouple
 *              implementation from an abstraction layer and can developed
 *              implementation independently. This interface can be used to
 *              process the input file and display all special character.
 * 
 * @author aman bansal
 */
public interface FileTypeIntf {

	/**
	 * @description This API helps to process the input file.
	 * 
	 * @param File
	 *            file
	 * @throws NotSupportedFileFormatException
	 * @throws IOException
	 */
	public FileValidationModel validateFile(File file) throws NotSupportedFileFormatException, IOException, Exception;

	/**
	 * @description This API helps to display all special character.
	 * 
	 * @throws NotSupportedFileFormatException
	 */
	public void displayAllSpecialCharacter(FileValidationModel fileValidationModel) throws NotSupportedFileFormatException;

}
